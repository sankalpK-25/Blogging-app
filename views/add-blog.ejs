<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include("./partials/head") %>
    <title>Document</title>
</head>
<body>
    <%- include("./partials/nav") %>

    <div class="container mt-4">
      <div class="row justify-content-center">
        <div class="col-md-8">
          <div class="card shadow-sm">
            <div class="card-header bg-white">
              <h5 class="mb-0" style="color: black;">Create a new blog post</h5>
            </div>
            <div class="card-body">
              <form action="/blog/add-blog" method="POST" enctype="multipart/form-data" novalidate>
                <div class="mb-3">
                  <label for="title" class="form-label">Title</label>
                  <input name="title" type="text" class="form-control" id="title" placeholder="Give your post a clear, descriptive title" required>
                  <div class="form-text" style="color: rgb(6, 236, 141);" >Keep the title under 100 characters.</div>
                </div>

                <div class="mb-3">
                  <label for="content" class="form-label">Content</label>
                  <textarea name="content" id="content" rows="8" class="form-control" placeholder="Write your story..." required></textarea>
                </div>

                <div class="mb-3">
                  <label for="coverImage" class="form-label">Cover image (optional)</label>
                  <input name="coverImage" class="form-control" type="file" id="coverImage" accept="image/*">
                  <div class="form-text">Accepted: jpg, png. Max 2MB.</div>
                </div>

                <div class="d-flex justify-content-between align-items-center">
                  <a href="/" class="btn btn-outline-secondary">Cancel</a>
                  <div>
                    <a type="button" role="button" href="/add-blogs/generate-with-ai"  id="generateAiBtn" class="btn btn-sm btn-outline-info me-2" title="Auto-generate title and content with AI">Generate with AI</a>
                    <button type="submit" class="btn btn-primary">Publish</button>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <script>
      (function(){
        const btn = document.getElementById('generateAiBtn');
        if(!btn) return;
        btn.addEventListener('click', function(){
          btn.disabled = true;
          const titleEl = document.getElementById('title');
          const contentEl = document.getElementById('content');
          if(titleEl) titleEl.value = 'AI-generated: A quick blog idea';
          if(contentEl) contentEl.value = 'This is an AI-generated draft. Edit to add your voice and details.';
          setTimeout(()=>{ btn.disabled = false; }, 800);
        });
      })();
    </script>
  </body>
    <%- include("./partials/script") %>

</html>