<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include("./partials/head") %>
    <title><%= blog.title %> - Thinkflow</title>
</head>
<body>
    <%- include("./partials/nav") %>

    <div class="container my-4">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <% if (blog.coverImageURL) { %>
                        <img src="<%= blog.coverImageURL %>" class="card-img-top" alt="cover image">
                    <% } %>
                    <div class="card-body">
                        <h1 class="h4 mb-2"><%= blog.title %></h1>

                        <div class="d-flex align-items-center mb-3">
                            <img src="<%= (blog.author && blog.author.profileImage) ? blog.author.profileImage : '/profile-photos/default.png' %>" alt="author" class="rounded-circle me-2" style="width:40px;height:40px;object-fit:cover;">
                            <div>
                                <div class="fw-bold" style="font-family: Arial, Helvetica;"><%= blog.author ? blog.author.fullName : 'Unknown' %></div>
                                <div class="small text-muted"><%= blog.createdAt ? blog.createdAt.toLocaleString() : '' %></div>
                            </div>
                        </div>

                        <div class="mb-4" style="">
                            <%= blog.content %>
                        </div>

                        <a href="/" class="btn btn-outline-primary">Back</a>
                        
                                                <!-- Comments section -->
                                                <hr class="my-4">
                                                <div id="comments" class="mt-3">
                                                    <h6 class="mb-3">Comments</h6>

                                                    <!-- existing comments (if passed in as comments array) -->
                                                    <% if (comments && comments.length) { %>
                                                        <ul class="list-group mb-3">
                                                            <% comments.forEach(c => { %>
                                                                <li class="list-group-item">
                                                                    <div class="d-flex align-items-start">
                                                                        <img src="<%= (c.commentedBy && c.commentedBy.profileImage) ? c.commentedBy.profileImage : '/profile-photos/default.png' %>" alt="pfp" class="rounded-circle me-2" style="width:36px;height:36px;object-fit:cover;">
                                                                        <div>
                                                                            <div class="small fw-bold" style="font-family: Arial, Helvetica;"><%= c.commentedBy ? c.commentedBy.fullName : 'Anonymous' %></div>
                                                                            <div class=" text-muted mb-1" style="font-size: 10px;"><%= c.createdAt ? c.createdAt.toLocaleString() : '' %></div>
                                                                            <div><%= c.content %></div>
                                                                        </div>
                                                                    </div>
                                                                </li>
                                                            <% }) %>
                                                        </ul>
                                                    <% } else { %>
                                                        <p class="text-muted small">Be the first to comment on this post.</p>
                                                    <% } %>

                                                    <!-- comment form -->
                                                    <form action="/blog/<%= blog._id %>/comment" method="POST" class="mt-3">
                                                        <div class="mb-2">
                                                            <label for="commentContent" class="form-label visually-hidden">Add a comment</label>
                                                            <textarea id="commentContent" name="content" class="form-control" rows="3" placeholder="Write a thoughtful comment..." required></textarea>
                                                        </div>
                                                        <div class="d-flex justify-content-end">
                                                            <button type="submit" class="btn btn-sm btn-primary">Post comment</button>
                                                        </div>
                                                    </form>
                                                </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include("./partials/script") %>
</body>
</html>
